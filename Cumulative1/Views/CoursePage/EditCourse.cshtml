@model Cumulative1.Models.Course
<div id="container">
	<nav>
		<a class="nav" href="/CoursePage/ListCourses">Back to Courses</a>
	</nav>
	<h2>Update Course Info</h2>
	<form method="POST" action="/CoursePage/UpdateCourse">
		<div>
			<label for="CourseId">Course Id:</label>
			<input type="text" id="CourseId" name="CourseId" value="@Model.CourseId" />
		</div>

		<div>
			<label for="CourseCode">Course Code:</label>
			<input type="text" id="CourseCode" name="CourseCode" value="@Model.CourseCode"/>
		</div>

		<div>
			<label for="CourseStartDate">Start Date:</label>
			<input type="datetime" id="CourseStartDate" name="CourseStartDate" value="@Model.CourseStartDate"/>
		</div>

		<div>
			<label for="TeacherId">Teacher Id:</label>
			<input type="text" id="TeacherId" name="TeacherId" value="@Model.TeacherId"/>
		</div>

		<div>
			<label for="CourseName"> Course Name:</label>
			<input type="text" id="CourseName" name="CourseName" value="@Model.CourseName" />
		</div>

		<div class="input-row">
		<input type="submit" value="Update Course"/>
		</div>

	</form>
</div>